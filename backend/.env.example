# AGI Studio Backend Configuration
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION
# ============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection
DATABASE_URL=postgresql://postgres:password@localhost:5432/agi_studio

# Redis connection
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# VICTOR-GPT5
# ============================================================================
VICTOR_MODEL_PATH=./victor_gpt5/data/victor_gpt5_godcore.weights
VICTOR_BLOODLINE_PATH=./victor_gpt5/bloodline.txt
VICTOR_CONFIG_PATH=./victor_gpt5/configs/default.yaml

# ============================================================================
# SECURITY
# ============================================================================
# Encryption key for data at rest (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_FILE=/var/log/agi-studio/backend.log

# ============================================================================
# PERFORMANCE
# ============================================================================
# Number of worker processes
WORKERS=4

# Request timeout (seconds)
TIMEOUT=120

# Max request body size (bytes)
MAX_CONTENT_LENGTH=10485760  # 10MB

# ============================================================================
# CACHE
# ============================================================================
CACHE_ENABLED=True
CACHE_DEFAULT_TTL=3600  # seconds

# ============================================================================
# MONITORING
# ============================================================================
# Enable metrics endpoint
METRICS_ENABLED=True
METRICS_PORT=9090

# Sentry DSN for error tracking
SENTRY_DSN=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=False
ENABLE_TELEMETRY=False
ENABLE_DEBUG_ENDPOINTS=False

# ============================================================================
# VECTOR DATABASE
# ============================================================================
# Qdrant configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=memories

# ============================================================================
# MODEL SERVING
# ============================================================================
# Model inference settings
MODEL_DEVICE=cpu  # cpu or cuda
MODEL_BATCH_SIZE=1
MODEL_MAX_LENGTH=2048

# ============================================================================
# BACKUP
# ============================================================================
BACKUP_ENABLED=False
BACKUP_INTERVAL=86400  # seconds (24 hours)
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/agi-studio

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Enable development features
DEV_MODE=True
DEV_AUTO_RELOAD=True
DEV_DEBUG_TOOLBAR=False
