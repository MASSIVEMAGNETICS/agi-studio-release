# AGI Studio Frontend Configuration
# Copy this file to .env and update with your values

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Backend API URL
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# API version
VITE_API_VERSION=v1

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Token storage key
VITE_AUTH_TOKEN_KEY=agi_studio_token

# Token refresh interval (milliseconds)
VITE_TOKEN_REFRESH_INTERVAL=1800000  # 30 minutes

# ============================================================================
# APPLICATION
# ============================================================================
# Application name
VITE_APP_NAME=AGI Studio
VITE_APP_VERSION=2.0.0

# Default theme
VITE_DEFAULT_THEME=dark  # dark or light

# ============================================================================
# FEATURES
# ============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_TELEMETRY=false

# ============================================================================
# LIMITS
# ============================================================================
# Maximum file upload size (bytes)
VITE_MAX_FILE_SIZE=10485760  # 10MB

# Maximum prompt length
VITE_MAX_PROMPT_LENGTH=10000

# Default generation settings
VITE_DEFAULT_MAX_TOKENS=150
VITE_DEFAULT_TEMPERATURE=0.7

# ============================================================================
# UI SETTINGS
# ============================================================================
# Pagination
VITE_ITEMS_PER_PAGE=20

# Auto-save interval (milliseconds)
VITE_AUTOSAVE_INTERVAL=30000  # 30 seconds

# Syntax highlighting theme
VITE_CODE_THEME=dracula

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_ID=

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Development mode
VITE_DEV_MODE=true

# Mock API (use mock data instead of real API)
VITE_USE_MOCK_API=false

# Show performance metrics
VITE_SHOW_PERFORMANCE=true
